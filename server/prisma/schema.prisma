generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Producto {
  id          String   @id @default(uuid())
  nombre      String
  precio      Float
  descripcion String
  imagen      String
  categoria   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
